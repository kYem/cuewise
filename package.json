{
  "name": "productivity-extension-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Productivity and motivation browser extension monorepo",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release:prepare": "pnpm version && pnpm build",
    "release:extension": "pnpm --filter @cuewise/browser-extension build:store",
    "publish:chrome": "tsx scripts/publish-chrome.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
